---
import { cn } from "@/lib/ui/cn";

export type InputSize = "sm" | "md" | "lg";

export interface Props {
  readonly id?: string;
  readonly name?: string;
  readonly type?: string;
  readonly value?: string;
  readonly placeholder?: string;
  readonly disabled?: boolean;
  readonly required?: boolean;
  readonly invalid?: boolean;
  readonly size?: InputSize;
  readonly class?: string;
}

const {
  id,
  name,
  type = "text",
  value,
  placeholder,
  disabled = false,
  required = false,
  invalid = false,
  size = "md",
  class: className,
  ...rest
} = Astro.props as Props;

const base = cn(
  "w-full rounded-md",
  "border border-[--color-main-300] bg-white text-main-body",
  "placeholder:text-main-body-lighter",
  "focus:outline-none focus:ring-2 focus:ring-[--color-purple] focus:border-transparent",
  "disabled:bg-main-50 disabled:text-main-700 disabled:cursor-not-allowed"
);

const bySize: Record<InputSize, string> = {
  sm: "h-8 px-2 text-sm",
  md: "h-10 px-3 text-sm",
  lg: "h-12 px-4 text-base",
};

const classes = cn(base, bySize[size], invalid && "ring-2 ring-[--color-danger] border-transparent", className);
---

<input
  id={id}
  name={name}
  type={type}
  value={value}
  placeholder={placeholder}
  disabled={disabled}
  required={required}
  aria-invalid={invalid ? "true" : undefined}
  class={classes}
  {...rest}
/>

