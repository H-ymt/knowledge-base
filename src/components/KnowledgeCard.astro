---
import type { KnowledgeEntry } from "@/lib/types";

export interface Props {
  entry: KnowledgeEntry;
}

const { entry } = Astro.props as Props;
const isExternal = entry.source === "zenn" || entry.source === "gist";
const href = isExternal ? entry.url : `/knowledge/${entry.slug}`;
---

<article class="border-main-200 hover:bg-main-25 rounded-md border p-4 transition" aria-labelledby={`title-${entry.id}`}>
  <a
    href={href}
    class="focus:ring-purple block focus:ring-2 focus:outline-none"
    target={isExternal ? "_blank" : undefined}
    rel={isExternal ? "noopener" : undefined}
  >
    <h2 id={`title-${entry.id}`} class="mb-1 text-xl">{entry.title}</h2>
    <p class="text-main-body-lighter mb-2 text-sm">
      {new Date(entry.publishedAt).toLocaleDateString("ja-JP")}
      {
        entry.updatedAt && (
          <>
            <span aria-hidden="true"> · </span>
            更新 {new Date(entry.updatedAt).toLocaleDateString("ja-JP")}
          </>
        )
      }
    </p>
    <p class="line-clamp-2 text-sm">{entry.summary}</p>
    {
      entry.tags.length > 0 && (
        <div class="mt-2 flex flex-wrap gap-2">
          {entry.tags.slice(0, 8).map((t) => (
            <span class="bg-main-50 text-main-700 rounded-full px-2 py-0.5 text-xs">{t.norm}</span>
          ))}
        </div>
      )
    }
  </a>
  {
    !isExternal && (
      <p class="mt-2 text-xs">
        <a class="text-link hover:underline" href={entry.url} target="_blank" rel="noopener">
          ソースを開く ↗
        </a>
      </p>
    )
  }
</article>
