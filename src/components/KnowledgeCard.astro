---
const { entry } = Astro.props;
const isExternal = entry.source === "zenn" || entry.source === "gist";
const href = isExternal ? entry.url : `/knowledge/${entry.slug}`;
---

<article class="hover:bg-main-25 rounded-md transition" aria-labelledby={`title-${entry.id}`}>
  <a
    href={href}
    class="focus:ring-purple block focus:outline-0 focus-visible:ring-0"
    target={isExternal ? "_blank" : undefined}
    rel={isExternal ? "noopener" : undefined}
  >
    <h2 id={`title-${entry.id}`} class="mb-1 flex items-center gap-2">
      {
        entry.source === "gist" && (
          <svg class="text-main-body h-4 w-4 shrink-0" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true">
            <path d="M8 0c4.42 0 8 3.58 8 8a8.013 8.013 0 0 1-5.45 7.59c-.4.08-.55-.17-.55-.38 0-.27.01-1.13.01-2.2 0-.75-.25-1.23-.54-1.48 1.78-.2 3.65-.88 3.65-3.95 0-.88-.31-1.59-.82-2.15.08-.2.36-1.02-.08-2.12 0 0-.67-.22-2.2.82-.64-.18-1.32-.27-2-.27-.68 0-1.36.09-2 .27-1.53-1.03-2.2-.82-2.2-.82-.44 1.1-.16 1.92-.08 2.12-.51.56-.82 1.28-.82 2.15 0 3.06 1.86 3.75 3.64 3.95-.23.2-.44.55-.51 1.07-.46.21-1.61.55-2.33-.66-.15-.24-.6-.83-1.23-.82-.67.01-.27.38.01.53.34.19.73.9.82 1.13.16.45.68 1.31 2.69.94 0 .67.01 1.3.01 1.49 0 .21-.15.45-.55.38A7.995 7.995 0 0 1 0 8c0-4.42 3.58-8 8-8Z" />
          </svg>
        )
      }
      {
        entry.source === "zenn" && (
          <svg class="text-main-body h-4 w-4 shrink-0" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M11.565.5a.75.75 0 0 1 .87 0l9.5 5.5a.75.75 0 0 1 0 1.296L12 13.407 1.065 7.296a.75.75 0 0 1 0-1.296l9.5-5.5ZM12 11.795l7.835-4.54L12 2.715 4.165 7.255 12 11.795Z" />
            <path d="M11.565 6.995a.75.75 0 0 1 .87 0l9.5 5.5a.75.75 0 0 1 .065 1.296l-9.5 5.5a.75.75 0 0 1-.87 0l-9.5-5.5a.75.75 0 0 1 .065-1.296l9.5-5.5Zm0 5.295 7.835-4.54L12 8.515 4.165 13.055 12 17.295Z" />
            <path d="M11.565 13.495a.75.75 0 0 1 .87 0l9.5 5.5a.75.75 0 0 1 0 1.296l-9.5 5.5a.75.75 0 0 1-.87 0l-9.5-5.5a.75.75 0 0 1 0-1.296l9.5-5.5Z" />
          </svg>
        )
      }
      <span>{entry.title}</span>
    </h2>
    <p class="text-main-body-lighter mb-2 text-xs">
      {new Date(entry.publishedAt).toLocaleDateString("ja-JP")}
      {
        entry.updatedAt && (
          <>
            <span aria-hidden="true"> · </span>
            更新 {new Date(entry.updatedAt).toLocaleDateString("ja-JP")}
          </>
        )
      }
    </p>
    <p class="line-clamp-2 text-xs">{entry.summary}</p>
    {
      entry.tags.length > 0 && (
        <div class="mt-2 flex flex-wrap gap-2">
          {/* @ts-expect-error - Astroフロントマターでは型注釈が制限されているため */}
          {entry.tags.slice(0, 8).map((t) => (
            <span class="bg-main-50 text-main-700 rounded-full px-2.5 py-0.75 text-xs">{t.norm}</span>
          ))}
        </div>
      )
    }
  </a>
  {
    !isExternal && (
      <p class="mt-2 text-xs">
        <a class="text-link hover:underline" href={entry.url} target="_blank" rel="noopener">
          ソースを開く ↗
        </a>
      </p>
    )
  }
</article>
